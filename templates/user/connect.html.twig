{% extends 'layout.html.twig' %}
{% block title %}CONNEXION{% endblock %}
{% block header %}{% endblock %}
{% block css %}<link rel="stylesheet" href="./assets/css/connect.css">{% endblock %}
{% block content %}
    <main class="form-signin">
        <form method="post">
            <img class="mb-4" src="/assets/pictures/adcn.png" alt="logo adcn" width="72" height="57">
            <h1 class="h3 mb-3 fw-normal">Connectez-vous</h1>

            <div class="form-floating">
                <input type="email" class="form-control" id="mail" name ="mail" placeholder="nom@exemple.com" required>
                <label for="floatingInput">Adresse e-mail</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="password" name="password" placeholder="Mot de passe" required>
                <label for="floatingPassword">Mot de passe</label>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Se connecter</button>
            <p class="mt-5 mb-3 text-muted">&copy; Matthieu FRITSCH 2022</p>
        </form>
    </main>

{% endblock %}
{% block footer %}{% endblock %}